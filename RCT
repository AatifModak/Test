	@GetMapping(value = "/account/gl-data")
	@ApiOperation(value = "Retrieves the GL Data")
	public ResponseEntity<GlDataDTO> getGlData(
			@RequestHeader(name = GlobalConstants.ACCESS_CONTEXT) String context,
			@RequestParam(required = true) Long bankAccountId) {
		try {
			GlDataDTO glData = bankAccountServiceImpl.getGlData(context, bankAccountId);
			return new ResponseEntity<>(glData, HttpStatus.OK);
		} catch (Exception ex) {
			log.error("Exception occurred while getting GL Data for Bank Account Id: {} {}", bankAccountId,
					ExceptionUtils.getStackTrace(ex));
			throw new BadRequestException(Constants.ERROR_MESSAGE);
		}
	}
